/**app.wxss**/
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif;
  box-sizing: border-box;
}

/* 清除默认样式 */
view, text, button, input, picker {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

button {
  background: initial;
  line-height: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}